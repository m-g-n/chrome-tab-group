{
  "manifest_version": 3,
  "name": "Tab Group Manager",
  "version": "1.0.0",
  "description": "JSONファイルベースでタブグループを管理するChrome拡張",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Group Manager"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}